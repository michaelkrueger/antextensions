<?xml version="1.0"?>

<project name="test" default="test" basedir=".">
	<taskdef name="string" classname="de.mk.ant.StringTask" classpath="bin"/>
	
	<taskdef name="karotz" classname="de.mk.ant.KarotzTask" classpath="bin"/>
	<typedef name="karotzaction" classname="de.mk.ant.KarotzTask$AntKarotzAction" classpath="bin"/>
	
	<target name="test" >
		<echo>Test ${test} </echo>
		<string property="test" value="unhappy" operation="start" index="2" />
		<echo>Test ${test} </echo>
		<string property="test" value="unhappy" operation="end" index="2" />
		<echo>Test ${test} </echo>
		<string property="test" value="unhappy" operation="substring" start="2" end="6" />
		<echo>Test ${test} </echo>
		
		<property name="version" value="KKKKK_V1.2.3.4" />
		<echo>version ${version} </echo>
		<string property="subversion" value="${version}" operation="end" index="7" />
		<echo>version ${subversion} </echo>
		
		<karotz apiKey="${api}" secretKey="${secret}" installId="${install}" >
			<karotzaction name="name" />
		</karotz>
		
	</target>		
</project>	
